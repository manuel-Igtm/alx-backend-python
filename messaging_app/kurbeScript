#!/bin/bash

# kurbeScript: Start and check Kubernetes locally using minikube

# Exit immediately if a command exits with a non-zero status
set -e

echo "🚀 Starting Kubernetes cluster with minikube..."

# Start minikube (if already running, this will ensure it's active)
minikube start

echo "✅ Verifying cluster status..."
kubectl cluster-info

echo "📋 Retrieving pods in default namespace..."
kubectl get pods --all-namespaces

echo "🎉 Kubernetes setup complete!"
